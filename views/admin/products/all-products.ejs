<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../../includes/head", {title: "All Products"}) %>
    <link rel="stylesheet" href="/styles/products.css" />
  </head>
  <body>
    <%- include("../../includes/header") %>
    <main>
      <h1>Product Administration</h1>
      <section id="product-mgmt-section">
        <h2>Manage Products</h2>
        <div class="link-control">
          <a class="btn" href="/admin/product/new">Add Product</a>
        </div>
      </section>
      <section>
        <ul id="all-products-grid">
          <% for (const product of products) { %>
          <li><%- include("../../includes/product-item", {product}) %></li>
          <% } %>
        </ul>
      </section>
    </main>
  </body>
</html>
