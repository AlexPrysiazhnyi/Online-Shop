<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../../includes/head", {title: "Your Cart"}) %>
    <link rel="stylesheet" href="/styles/cart.css" />
    <script src="/scripts/cart-mgmt.js" defer></script>
  </head>
  <body>
    <%- include("../../includes/header") %>
    <main id="cart-main">
        <% if (locals.cart.items.length === 0) { %>
            <h1>Your Cart is Empty!</h1>
       <% } else { %>
      <h1>Your Cart</h1>
      <section>
        <ul id="cart-items">
          <% for (const cartItem of locals.cart.items) { %> <%-
          include("../../includes/cart-item", {item: cartItem}) %> <% } %>
        </ul>
        <div id="cart-total">
          <p>Total: $<%=locals.cart.totalPrice.toFixed(2) %></p>
          <button id="place-order-btn" class="btn">Place Order</button>
        </div>
      </section>
      <% } %>
    </main>
  </body>
</html>
